---
import ImageSVG from "./shared/ImageSVG.astro";
---

<section class:list={["hero-container", "bring-up"]}>
  <div class="image-container">
    <ImageSVG name="Logo" />
  </div>

  <p class:list={["description", "body2"]}>
    Tu visión, nuestra misión: Despega con Orbita.
  </p>

  <div class="scroll-container">
    <ImageSVG name="Scroll" />
    <p class="body2">Desliza hacia abajo.</p>
  </div>
</section>

<style>
  .hero-container {
    min-height: calc(100svh - 56px);
    display: flex;
    flex-flow: column;
    align-items: center;
  }

  .image-container {
    margin-top: 35svh;
  }

  .description {
    max-width: 50svw;
    margin-top: 50px;
    text-align: center;
  }

  .scroll-container {
    margin-top: 150px;
    display: flex;
    flex-flow: column;
    align-items: center;
  }

  /* Specific rules for really small screens */
  @media screen and (width < 568px) and (height <= 667px) {
    .scroll-container {
      margin-top: 60px;
    }
  }

  @media (width >= 768px) {
    .image-container {
      margin-top: 40svh;
    }

    .scroll-container {
      margin-top: 200px;
    }
  }

  @media (width >= 1024px) {
    .image-container {
      margin-top: 35svh;
    }

    .scroll-container {
      margin-top: 200px;
    }
  }

  @media (width >= 1280px) {
    .image-container {
      margin-top: 40svh;
    }

    .scroll-container {
      margin-top: 250px;
    }
  }
</style>
