---
import { ContactForm } from "@components/islands/contact-form/ContactForm";
import ContactInfo from "@components/ContactInfo.astro";
import Modal from "@components/shared/Modal.astro";
---

<section class="get-help bring-up">
  <h2>Tell us how we can help you</h2>

  <ContactInfo position="Founder" email="contact@gmail.com" name="Name" />
  <ContactInfo position="Sales" email="contact@gmail.com" name="Name" />

  <Modal
    class="contact-button"
    id="contactdialog"
    buttonText="Let us Contact You"
  >
    <main class="dialog-content" slot="main">
      <ContactForm client:load />
    </main>
  </Modal>
</section>

<style>
  .get-help {
    background: var(--paper);
    padding: 56px 16px;
    display: flex;
    flex-flow: column;
    gap: 24px;
  }

  .contact {
    padding: 16px 32px;
    border-bottom: 1px solid var(--divider);
  }

  .position,
  .email {
    margin-bottom: 16px;
  }

  .name {
    font-size: 16px;
    font-weight: 600;
  }

  .dialog-content {
    height: 90%;
  }

  .contact-button {
    width: 205px;
    align-self: center;
  }

  @media (width >= 767px) {
    .get-help {
      padding: 56px 32px;
    }
  }

  @media (width >= 1280px) {
    h2 {
      text-align: center;
    }
  }
</style>
