---
import Icon from "@components/shared/Icon.astro";
import ImageSVG from "./shared/ImageSVG.astro";
---

<nav class="nav-wrapper">
  <ImageSVG class="logo-wrapper" name="menu-logo" />

  <button class="hamburger-menu">
    <Icon name="hamburger-menu" />
  </button>
</nav>

<style>
  .nav-wrapper {
    background: var(--header-background);
    padding: 8px 16px;
    height: 56px;
    display: flex;
    justify-content: space-between;
  }

  .logo-wrapper {
    width: 400px;
    display: flex;
    align-items: center;
  }

  .hamburger-menu {
    display: flex;
    align-items: center;
    width: 24px;
    height: 100%;
    cursor: pointer;
  }
</style>
