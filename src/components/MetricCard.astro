---
import Card from "@components/shared/Card.astro";

export interface Props {
  title: string;
  description: string;
  class?: string;
}

const { title, description, class: className, ...rest } = Astro.props;
---

<Card class:list={["metric-card", className]} {...rest}>
  <div class="data-wrapper">
    <h3>{title}</h3>
    <p>{description}</p>
  </div>
</Card>

<style>
  .metric-card {
    width: 100%;
  }

  .data-wrapper {
    display: flex;
    flex-flow: column;
    gap: 16px;
  }
</style>
