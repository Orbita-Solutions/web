<style>
  .metrics-container {
    display: flex;
    flex-flow: column;
    padding: 56px 16px;
    width: 100%;
    gap: 24px;
  }

  .metrics-partial-container {
    display: flex;
    flex-flow: row;
    gap: 24px;
    justify-content: space-between;
    flex-wrap: wrap;
  }

  .metrics-partial-container > :nth-child(1),
  .metrics-partial-container > :nth-child(2) {
    width: calc(50% - 12px);
  }

  .metric-icon-wrapper {
    display: none;
  }

  .desktop-only {
    display: none;
  }

  @media (width >= 1280px) {
    .desktop-only {
      display: initial;
    }

    .metrics-container {
      flex-flow: row;
      padding: 56px 64px;
    }

    .metrics-partial-container {
      display: none;
    }

    .metric-icon-wrapper {
      display: initial;
      height: 80px;
    }

    .metric-icon {
      width: 38px;
      height: 38px;
    }
  }

  @media (width >= 1920px) {
  }
</style>
